datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model StaffUser {
  id    Int      @id @default(autoincrement())
  role  StaffRole  @default(default)
  // add other arbitrary user data fields
}

model Client {
  id        String    @id @default(uuid())
  name      String
  surname   String
  age       Int
  heartrate Int
  o2        Int
  // add other medical and psychological data fields
}

enum StaffRole {
  admin
  tester
  default
}
