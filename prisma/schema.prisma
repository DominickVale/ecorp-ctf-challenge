datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

generator pothos {
  provider = "prisma-pothos-types"
}

model StaffUser {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  role     StaffRole @default(DEFAULT)
}

model Client {
  id        String   @id @default(uuid())
  name      String
  surname   String
  age       Int
  heartrate Int
  o2        Int
}

enum StaffRole {
  ADMIN
  TESTER
  DEFAULT
}
